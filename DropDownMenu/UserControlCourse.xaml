<UserControl x:Class="ExaminationProject.UserControlCourse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExaminationProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="student">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Margin="10,8" FontSize="15">Id:</TextBlock>
                    <TextBlock Margin="10,8" FontSize="15">Name:</TextBlock>
                    <TextBlock Margin="10,8" FontSize="15">Description:</TextBlock>
                    <TextBlock Margin="10,8" FontSize="15">Minimum Degree:</TextBlock>
                    <TextBlock Margin="10,8" FontSize="15">Maximum Degree:</TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBox Name="txtId" Margin="10,5" Width="200" IsEnabled="False"></TextBox>

                    <TextBox Name="txtName" Margin="10,5" Width="200"></TextBox>

                    <TextBox Name="txtDesc" Margin="10,5" Width="200"></TextBox>

                    <TextBox Name="txtMinDeg" Margin="10,5" Width="200"></TextBox>

                    <TextBox Name="txtMaxDeg" Margin="10,5" Width="200"></TextBox>
                </StackPanel>
            </Grid>

        </StackPanel>
        <StackPanel Grid.Column="1">
            <DataGrid Name="allCourses" Margin="20"  SelectionChanged="AllCourses_SelectionChanged">

            </DataGrid>
        </StackPanel>
        <DockPanel Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center">
            <WrapPanel DockPanel.Dock="Bottom">
                <Button x:Name="btnAdd" Margin="20,15" Click="BtnAdd_Click">Add</Button>
                <Button x:Name="btnUpdate" Margin="20,15" Click="BtnUpdate_Click">Update</Button>
                <Button x:Name="btnDelete" Margin="20,15" Click="BtnDelete_Click">Delete</Button>
            </WrapPanel>
        </DockPanel>
    </Grid>
</UserControl>
